{
    "name": "chatbot-tui",
    "author": "",
    "description": "Stricli command line application",
    "license": "MIT",
    "type": "module",
    "version": "0.0.0",
    "files": [
        "dist"
    ],
    "bin": {
        "chatbot-tui": "dist/cli.js",
        "__chatbot-tui_bash_complete": "dist/bash-complete.js"
    },
    "engines": {
        "node": ">=22"
    },
    "scripts": {
        "dev": "tsup --watch --onSuccess 'node dist/cli.js'",
        "prebuild": "tsc -p src/tsconfig.json",
        "build": "tsup",
        "prepublishOnly": "npm run build",
        "postinstall": "chatbot-tui install"
    },
    "tsup": {
        "entry": [
            "src/bin/cli.ts",
            "src/bin/bash-complete.ts"
        ],
        "format": [
            "esm"
        ],
        "tsconfig": "src/tsconfig.json",
        "clean": true,
        "splitting": true,
        "minify": true
    },
    "dependencies": {
        "@stricli/auto-complete": "^1.1.2",
        "@stricli/core": "^1.1.2",
        "@types/blessed": "^0.1.25",
        "blessed": "^0.1.81"
    },
    "devDependencies": {
        "@types/node": "22.x",
        "tsup": "^6.7.0",
        "typescript": "5.6.x"
    }
}