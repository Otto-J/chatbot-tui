{
  "name": "chatbot-tui",
  "author": "",
  "description": "Stricli command line application",
  "license": "MIT",
  "type": "module",
  "version": "0.0.0",
  "files": [
    "dist"
  ],
  "bin": {
    "chatbot-tui": "dist/cli.js",
    "__chatbot-tui_bash_complete": "dist/bash-complete.js"
  },
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "test": "vitest",
    "dev": "tsup --watch --onSuccess 'node dist/cli.js'",
    "chat": "bun run src/simple_chat.ts",
    "chat2": "tsup src/simple_chat.ts --onSuccess 'node dist/simple_chat.js'",
    "prebuild": "tsc -p src/tsconfig.json",
    "build": "tsup",
    "prepublishOnly": "npm run build",
    "postinstall": "chatbot-tui install"
  },
  "tsup": {
    "entry": [
      "src/bin/cli.ts",
      "src/bin/bash-complete.ts"
    ],
    "format": [
      "esm"
    ],
    "tsconfig": "src/tsconfig.json",
    "clean": true,
    "splitting": true,
    "minify": true
  },
  "dependencies": {
    "@ai-sdk/openai-compatible": "^0.2.14",
    "@stricli/auto-complete": "^1.1.2",
    "@stricli/core": "^1.1.2",
    "@types/blessed": "^0.1.25",
    "ai": "^4.3.16",
    "axios": "^1.10.0",
    "blessed": "^0.1.81",
    "conf": "^14.0.0",
    "dotenv": "^17.0.0",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@types/node": "22.x",
    "prettier": "^3.6.2",
    "tsup": "^6.7.0",
    "typescript": "5.6.x",
    "vitest": "^3.2.4"
  }
}
